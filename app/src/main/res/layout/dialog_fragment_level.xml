<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/eight_dp"
        app:cardElevation="@dimen/zero_dp"
        android:layout_gravity="center">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="end"
                android:padding="@dimen/_8dp"/>

        <LinearLayout
                android:id="@+id/llLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ivClose"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/fifty_dp"
                android:paddingEnd="@dimen/fifty_dp"
                android:paddingBottom="@dimen/twenty_dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_home_easy"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/five_dp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/five_dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivHard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_home_hard"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/five_dp"
                    android:layout_margin="@dimen/five_dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>